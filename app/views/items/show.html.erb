<div class="container mt-3">
 <h2>投稿詳細</h2>
  <div class="row">
    <div class ="col">
     <%= attachment_image_tag @item, :image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </div>
  </div>
  <div class ="row">
   <div class ="col">
    <h4>商品名</h4>
   </div>
   <div class ="col">
    <%= @item.name %>
   </div>
  </div>
  <div class ="row">
   <div class ="col">
    <h4>商品説明</h4>
   </div>
   <div class ="col">
    <%= @item.description %>
   </div>
  </div>
  <div class ="row">
   <div class ="col">
    <h4>ジャンル</h4>
   </div>
   <div class ="col">
    <%= @item.genre.name %>
   </div>
  </div>
  <div class ="row">
   <div class ="col">
    <h4>価格</h4>
   </div>
   <div class ="col">
    <%= @item.price.to_s(:delimited) %>円
   </div>
  </div>
  <div class ="row">
   <div class ="col">
    <%= link_to "編集する", edit_item_path, class:"btn btn-success" %>
   </div>
  </div>
  <div class ="row">
   <div class ="col">
  <td><%= link_to "削除する", item_path(@item.id), class: "btn btn-danger", method: :delete, data: { confirm: '削除しますか？' } %></td>
   </div>
  </div>
</div>