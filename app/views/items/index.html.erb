<h2>商品一覧</h2>

 <% @items.each do |item| %>
  <td><%= attachment_image_tag item, :image, size: "100x100" %></td>
  <td><%= link_to item.name , item_path(item.id), class:"border:solid 1px " %></td>
  <td><%= item.genre.name %></td>
  <td><%= item.description %></td>
  <p><%= link_to "#{item.favorites.count} いいね", item_path(item.id) %></p>
  <p><%= link_to "#{item.comments.count} コメント", item_path(item.id) %></p>
  <% end %>