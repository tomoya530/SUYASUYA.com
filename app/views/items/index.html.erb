<h2>商品一覧</h2>

 <% @items.each do |item| %>
  <td><%= attachment_image_tag item, :image, :fill, 180, 140, fallback: "no_image.jpg"%></td>
  <td><%= link_to item.name , item_path(item.id), class:"border:solid 1px " %></td>
  <td><%= item.genre.name %></td>
  <td><%= item.description %></td>
  <% end %>