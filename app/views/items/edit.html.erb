<div class="container mt-3">
 <h2>投稿編集</h2>
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @item, :image, size: "100x100", format: 'jpeg' %>
    </div>
  </div>
<%= form_with model: @item, url: item_path(@item.id), method: :patch, local:true do |f| %>

      <div class ="row">
       <div class ="col">
        <h4>商品画像</h4>
       </div>
       <div class ="col">
        <%= f.attachment_field :image %>
       </div>
      </div>

     <div class ="row">
       <div class ="col">
        <h4>商品名</h4>
       </div>
       <div class ="col">
        <%= f.text_field :name %>
       </div>
    </div>

    <div class ="row">
       <div class ="col">
        <h4>説明</h4>
       </div>
       <div class ="col">
        <%= f.text_field :description %>
       </div>
    </div>

    <div class ="row">
       <div class ="col">
        <h4>ジャンル</h4>
       </div>
       <div class ="col">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
       </div>
    </div>

    <div class ="row">
       <div class ="col">
        <h4>税抜価格</h4>
       </div>
       <div class ="col">
        <%= f.text_field :price %>
       </div>
    </div>

   <div class ="row">
    <div class ="col">
     <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
   </div>
<% end %>
   </div>
  </div>
 </div>