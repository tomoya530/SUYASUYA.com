<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>

    フォロー数: <%= @user.followings.count %>
    フォロワー数: <%= @user.followers.count %>
    
  <% if current_user.following?(@user) %>
  <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>
  <% else %>
  <%= link_to "Follow", user_relationships_path(@user.id), method: :post %>
  <% end %>


</div>
<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<% @items.each do |item| %>
<div>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, size: "100x100" %>
  <% end %>
  <p>商品名：<%= item.name %></p>
  <p>説明：<%= item.description %></p>
  <div class="item-evaluation" data-score="<%= item.evaluation %>"></div>
  <p>ユーザーネーム：<%= item.user.name %></p>
</div>
<% end %>

  <script>
  $('.item-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
  </script>