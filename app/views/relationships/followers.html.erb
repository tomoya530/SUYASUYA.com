<div class="profile-container mt-3">
 <div class="container mt-3">
   <h2>Follower Users</h2>
    <% if @users.exists? %>
    <% @users.each do |user| %>
    <div class="card mb-3 mx-auto" style="width: 70%">
      <div class="row g-0">
        <div class="col-md-4">
          <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.name, user_path(user.id), :style=> "font-size:40px; color: black;" %></h5>
            <p class="card-text">フォロー: <%= user.followings.count %></p>
            <p class="card-text mb-3">フォロワー: <%= user.followers.count %></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% else %>
  <h1>ユーザーはいません!</h1>
<% end %>
 </div>
</div>
