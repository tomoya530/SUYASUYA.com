<% if user_signed_in? %>
    <% if @item.favorited_by?(current_user) %>
        <p><span>いいね♥:　 </span><%=link_to @item.favorites.count, item_favorites_path(@item.id), method: :delete, remote: true %></p>
    <% else %>
        <p><span>いいね♡: 　</span><%=link_to @item.favorites.count, item_favorites_path(@item.id), method: :post, remote: true %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= @item.favorites.count %></p>
<% end %>
