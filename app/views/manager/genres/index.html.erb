
<div class="container">
    <div class="row my-3">
      <h2>ジャンル一覧・追加</h2>
    </div>
  <div class="row">
        <%= form_with model: @genre, url: manager_genres_path, method: :post, local: true do |f| %>
        <table>
            <th><h5>ジャンル名</h5></th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit '新規登録', class: 'btn btn-success' %></th>
        </table>
        <% end %>
  </div>
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ジャンル</th>
        <tr>
      </thead>
      <tbody>
          <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
              　<td><%= link_to "編集する", edit_manager_genre_path(genre.id), class: "btn btn-success",method: :get %>  </td>
                <td><%= link_to "削除する", manager_genre_path(genre.id), class: "btn btn-danger", method: :delete, data: { confirm: '削除しますか？' } %></td>
            </tr>
           <% end %>
      </tbody>

  </div>
</div>